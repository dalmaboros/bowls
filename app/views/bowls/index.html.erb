<% @bowls.each do |bowl| %>
  <div class="column">
    <% if !bowl.scraps.empty? %>
      <%= link_to bowl_scrap_path(bowl, bowl.scraps.sample), class: "foo" do %>
        <div class="bowl"></div>
      <% end %>
    <% else %>
      <%= link_to new_bowl_scrap_path(bowl), class: "foo" do %>
        <div class="bowl"></div>
      <% end %>
    <% end %>

    <%= link_to bowl.name, bowl_path(bowl) %>
  </div>
<% end %>
