<div class="column">
  <h2>New Bowl</h2>

  <% if @bowl.errors.any? %>
    <div id="error_explanation">
      <% @bowl.errors.full_messages.each do |msg| %>
        <p><%= msg %>!</p>
      <% end %>
    </div>
  <% end %>

  <%= form_for @bowl do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.label :name %>
    <%= f.text_field :name %></p>
    <%= f.label :description %>
    <%= f.text_field :description %></p>
    <%= f.submit %>
  <% end %>
</div>
