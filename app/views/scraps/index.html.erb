<div class="column">
  <% if @bowl %>
    <h2>scraps in '<%= @bowl.name %>'</h2>
  <% else %>
    <h2>scraps</h2>
  <% end %>

  <% if @bowl %>
    <% if @bowl.scraps.empty? %>
      <p>This bowl is empty.</p>
      <p><%= link_to "Add a scrap", new_bowl_scrap_path %></p>
    <% else %>
      <% @bowl.scraps.each do |scrap| %>
        <p>
          <%= scrap.description %>
          <%= link_to "(edit)", edit_scrap_path(scrap) %>
        </p>
      <% end %>
    <% end %>
  <% else %>
    <% @scraps.each do |scrap| %>
      <p>
        <%= scrap.description %>
        <%= link_to "(edit)", edit_scrap_path(scrap) %>
      </p>
    <% end %>
  <% end %>
</div>
