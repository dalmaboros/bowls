<div class="column">
  <h2>Edit <%= @scrap.description %></h2>

  <%= form_for @scrap do |f| %>
    <%= f.label :description %>:
    <%= f.text_field :description %></p>
    <%= f.label "Bowls" %>:
    <%= collection_check_boxes(:scrap, :bowl_ids, Bowl.all, :id, :name) %></p>
    <%= f.submit %>
  <% end %>

<%= button_to "Delete Scrap", @scrap, method: :delete, data: { confirm: "Really?" } %>
</div>
