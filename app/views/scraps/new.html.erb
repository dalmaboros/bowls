<div class="column">
  <% if @bowl %>
    <h2>Add a scrap to '<%= @bowl.name %>'</h2>
  <% else %>
    <h2>Create a scrap</h2>
  <% end %>

  <% if @scrap.errors.any? %>
    <div id="error_explanation">
      <% @scrap.errors.full_messages.each do |msg| %>
        <p><%= msg %>!</p>
      <% end %>
    </div>
  <% end %>

  <%= form_for @scrap do |f| %>
    <% if @bowl %>
      <%= f.hidden_field :bowl_ids, :multiple => true, :value => @bowl.id %>
      <%= f.hidden_field :user_id, :value => @bowl.user.id %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, maxlength: 140 %></p>
    <%= f.submit %>
  <% end %>
</div>
